<h1>Car Details</h1>

<p><strong>Brand:</strong> <%= @car.brand %></p>
<p><strong>Model:</strong> <%= @car.model %></p>
<p><strong>Price:</strong> <%= @car.price %></p>
<p><strong>User:</strong> <%= @car.user.first_name %></p>

<% if policy(@car).edit? %>
  <%= link_to 'Edit', edit_car_path(@car) %>
<% end %>

<% if policy(@car).destroy? %>
  <%= button_to 'Delete', @car, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back to Cars', cars_path %>
