  <h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Price</th>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.price %></td>
        <td><%= car.user.name %></td>
        <td>
          <%= link_to 'Show', car %>
          <%= link_to 'Edit', edit_car_path(car) %>
          <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Car', new_car_path %>
