<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://i.imgur.com/xUvEqAa.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="row justify-content-center">
        <div class="col-sm-8 my-3">
          <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type the brand or the model of the car"
            %>
            <%= submit_tag "Search", name: "", class: "btn btn-secondary" %>
          <% end %>
        </div>
      </div>
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Cars for Sale", "/cars", class: "nav-link text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to "My cars", my_cars_cars_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar px-2" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "blank-profile-picture-973460_1280.webp", class: "avatar", alt:"dropdown menu"%>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Orders", orders_path, class: "dropdown-item" %>
              <%= link_to "Sell a car", new_car_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
