
<h1 class="text-center">My orders</h1>

<div class="container">
  <% @orders.each do |order| %>
    <div class="listing-card smaller my-3">
      <%= render "shared/photo", locals:{photo: order.car.photo} %>
      <h2><%= "#{order.car.brand} #{order.car.model}" %></h2>
      <p><i class="fa-solid fa-dollar-sign"></i> Price: R$ <%= order.car.price %></p>
      <p class="card-text"><i class="fa-solid fa-user"></i> Owner: <%= "#{order.car.user.first_name} #{order.car.user.last_name}" %></p>
    </div>
    <% end %>
</div>
